{
   "compilerOptions": {
      "allowJs": true,
      "baseUrl": ".",
      "noEmit": true,
      "moduleResolution": "node",
      "target": "ES2017",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": false
   },
   "exclude": ["node_modules", ".dist"],
   "include": ["src/**/*"]
}
